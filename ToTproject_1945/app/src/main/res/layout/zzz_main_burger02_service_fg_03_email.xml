<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".zzchaminhwan.MainBurger02ServiceFg">
    //4411

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView  android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="이름" />

        <EditText
            android:id="@+id/main_burger_service_email_edt_name"
            android:layout_marginVertical="15dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/radius" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView  android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="이메일" />

        <EditText
            android:id="@+id/main_burger_service_email_edt_email"
            android:layout_marginVertical="15dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/radius" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView  android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="휴대전화" />

       <EditText
android:id="@+id/main_burger_service_email_edt_tel"
            android:layout_marginVertical="15dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/radius" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView  android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="제목" />

        <EditText
android:id="@+id/main_burger_service_email_edt_title"
            android:layout_marginVertical="15dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/radius" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="7.5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="내용"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/main_burger_service_email_edt_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@drawable/radius" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView  android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="비밀번호" />

        <EditText
            android:id="@+id/main_burger_service_email_edt_password"
            android:layout_marginVertical="15dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/radius" />

    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <Button
            android:id="@+id/main_burger_service_email_btn_cancel"
            android:layout_marginHorizontal="40dp"
            android:layout_weight="1"
            android:text="취 소"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_width="125dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/main_burger_service_email_btn_submit"
            android:layout_marginHorizontal="40dp"
            android:layout_weight="1"
            android:text="문의하기"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_width="125dp"
            android:layout_height="50dp"/>
    </LinearLayout>


</LinearLayout>