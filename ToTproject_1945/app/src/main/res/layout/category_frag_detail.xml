        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/category_detail_pager"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/category_detail_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/like_ico"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/like_gray"/>
                    <TextView
                        android:id="@+id/category_detail_tv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="좋아요" />
                    <TextView
                        android:id="@+id/category_detail_like_count"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/category_detail_tv_reply"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_bell"
                    android:text="댓글쓰기" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>



        <!-- 만약 안될경우 LinearLayout 로 변경 할 것 -->
