<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".party.PartyJoinFragment"
    android:padding="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:background="@color/black"
            />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="파티의 상세 설명란 입니다 파티의 상세 설명란 입니다 파티의 상세 설명란 입니다 파티의 상세 설명란 입니다 파티의 상세 설명란 입니다 파티의 상세 설명란 입니다 파티의 상세 설명란 입니다 "
           android:layout_gravity="center"
           android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="가입된 멤버(5)"
            android:background="@drawable/both_line">
        </TextView>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:listSelector="#75A2CF"
            android:horizontalSpacing="8dp"
            android:verticalSpacing="8dp"
            />

























    </LinearLayout>

</FrameLayout>