<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".party.PartyCreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgv_back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_foreground"
                android:background="#900000"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="파티 새로 만들기"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_create_party"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="▼" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="vertical"
            android:weightSum="100">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="40dp"
                android:layout_weight="25"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_party_name"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"

                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:hint="파티 이름을 입력" />

                <Button
                    android:id="@+id/btn_checkid"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:text="중복검사"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="80"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_party_detail"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginBottom="30dp"
                    android:background="#999999"
                    android:gravity="center"
                    android:hint="간단한 파티소개를 입력해주세요
    \n\n
    디자인적 마진은 전부 빼놨습니다
    \n
    양옆에 짜를곳은 20dp씩 넣으면 될것같음" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="vertical"
            android:weightSum="100">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="40dp"
                android:layout_weight="25"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/checkbox_party_private"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="파티 공개여부 ( 공개 / 비공개 )" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_display_tags"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="75"
                android:background="#80000000"
                android:visibility="gone"
                android:clipChildren="false"
                android:orientation="vertical"
                android:weightSum="100">

                <!--            <View
                                android:layout_width="match_parent"
                                android:layout_height="5px"
                                android:background="#000000" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_weight="33"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edt_party_tag"

                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical"
                        android:hint="해시태그를 입력" />
                    <Button
                        android:id="@+id/btn_party_tag"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="태그추가"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_weight="67"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_party_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="#태그미리보기"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/tv_party_tag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="#태그미리보기"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/tv_party_tag3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="#태그미리보기"
                        android:textSize="16dp"/>
                    </LinearLayout>


            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#000000" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="#000000" />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_weight="15"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="파티를 대표할 사진을 추가해 보세요" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgv_party_pic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/tv_party_pic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="사진이름.png" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_create_party2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="파티생성하기"
            />


</LinearLayout>