<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/mainburger_btn_cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_cancel" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_foreground" />

            <ImageView
                android:layout_marginHorizontal="15dp"
                android:id="@+id/nav_bell"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/icon_bell" />


            <ImageView
                android:id="@+id/nav_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/icon_setting" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_burger_imgv_circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/mainburger_btn_cancel"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_launcher_foreground"
            app:civ_border_color="#ffffff"
            app:civ_border_overlay="true"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/main_burger_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/mainburger_btn_cancel"
            android:layout_marginVertical="20dp"
            android:gravity="center_vertical"
            android:text="로그인 (유저이름)"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_burger_tv_join"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/main_burger_tv_login"
            android:gravity="center_vertical"
            android:text="회원가입 (공백)"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/main_burger_tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/main_burger_tv_login"
            android:gravity="center_vertical"
            android:text="로그아웃"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/main_burger_afterlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_burger_imgv_circle"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/main_burger_myboard"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_text" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="20dp"

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="내가 쓴 글"
                    android:textColor="@color/item" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_burger_myscrap"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/like" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="좋아요"
                    android:textColor="@color/item" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_burger_myparty"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_guild" />

                <TextView
                    android:id="@+id/tv_burger_QmyParty"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="내 파티"
                    android:textColor="@color/item" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_burger_mbti"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="내 성향"
                    android:textColor="@color/item" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>