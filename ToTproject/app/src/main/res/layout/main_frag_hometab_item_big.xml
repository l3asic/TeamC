<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    android:orientation="vertical">
<!--    hometab_big_title-->
    <ImageView
        android:id="@+id/hometab_big_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/image_test" />



    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/hometab_big_img_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/like" />
            <TextView
                android:gravity="center"
                android:id="@+id/hometab_big_tv_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/hometab_big_img_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_comment_24" />

            <TextView
                android:gravity="center"
                android:id="@+id/hometab_big_tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/hometab_big_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_back1"
        android:text="여행지이름"
        android:padding="10dp"
        android:textColor="#FFF"
        android:textSize="15dp"
        />







</FrameLayout>


