<script type="text/javascript" src="jquery/jquery-3.6.0.js"></script>
<script type="text/javascript">
$(document).ready(function(){
	$("#btn1").on("click", function(){
		$("#display1").empty();
		$("#display1").append("안녕하세요^^");
	});	//on()
	
	$("#btn2").click(function(){
		$("#display2").html("반갑습니다^^");
	});	//click()
});	//ready()

function fnClick(){	
	var display = document.getElementById("display3").value;
	alert(display);
	diaplay.document.write("어서오세요^^");
	//var msg = document.getElementById("display3").value;
	//alert(msg);
	//document.getElementById("display3").value = "어서오세요^^";	
}
</script>

