<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/board_user_reply_imgv_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="#708090"
        app:civ_border_color="#ffffff"
        app:civ_border_width="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/board_user_reply_imgv_profile"
        >

        <TextView
            android:id="@+id/board_user_reply_member_id"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="member_id"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/board_user_reply_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_user_reply_member_id"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:enabled="false"
            android:gravity="top"
            android:hint="reply_content"
            android:minHeight="20dp"
            android:text="reply_content"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/board_user_reply_writedate"
            android:layout_width="wrap_content"

            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:text="0000/00/00" />


    </RelativeLayout>
<ImageView
    android:layout_marginHorizontal="15dp"
    android:layout_below="@id/board_user_reply_imgv_profile"
    android:layout_width="match_parent"
    android:layout_height="1.5dp"
    android:background="@drawable/bottom_line"
    />
</RelativeLayout>