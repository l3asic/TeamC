<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".board.Board00Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF2E841B">

        <Button
            android:id="@+id/board_act_btn_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/board_act_btn_right"
            android:background="@drawable/ic_cmh_baseline_cancel"
            android:visibility="gone" />

        <TextView
            android:id="@+id/board_act_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="board activity"
            android:textSize="20dp" />

        <Button
            android:id="@+id/board_act_btn_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_cmh_baseline_check_circle"
            android:visibility="gone" />
    </RelativeLayout>


    <FrameLayout

        android:id="@+id/board_container_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/board_container_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>