<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.totproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="31" />
    <!-- 인터넷 사용 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 저장소와 카메라 권한 별도의 동의가 메소드로 필요함※ -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" /> <!-- API30이상부터는 queries라는 권한부여를 받는 처리가 한번 더 생김 -->
    <queries>

        <!-- WebView -->
        <intent>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.BROWSABLE" />

            <data android:scheme="http" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.BROWSABLE" />

            <data android:scheme="https" />
        </intent>

        <!-- Camera -->
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>

        <!-- Gallery -->
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />
        </intent>

        <!-- Youtube -->
        <intent>
            <action android:name="android.media.browse.MediaBrowserService" />
        </intent>
        <!-- 네이버앱 : 로그인, 스킴로그인 -->
        <package android:name="com.nhn.android.search" /> <!-- 커스텀탭 로그인 -->
        <intent>
            <action android:name="android.support.customtabs.action.CustomTabsService" />
        </intent>

        <package android:name="com.android.chrome" />
        <package android:name="com.locnall.KimGiSa" />
        <package android:name="com.lguplus.navi" />
        <package android:name="com.kakao.talk" />
        <package android:name="com.kakao.talk.alpha" />
        <package android:name="com.kakao.talk.sandbox" />
        <package android:name="com.kakao.onetalk" />
        <package android:name="com.chrome.beta" />
        <package android:name="com.chrome.dev" />
    </queries>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.ToTproject"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.example.totproject.party.InviteMemberActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.party_plan.PlanCreatePlanActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.party_plan.PlanMainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.party_plan.PlanUpdatePlanActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.party.MyPartyInfoActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.party.PartyCreateActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.party.PartyJoinActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.party.PartyMainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.whosepageactivity.WhosePage00Activity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.category.CategoryMainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.category.CategoryReplyActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.mainburgeractivity.MainBurger00Activity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.board.zzz_Board00Activity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.main.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.login.TendencyActivity01"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.login.TendencyActivity02"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.login.JoinActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.totproject.login.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Kakao -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/TransparentCompat" >
            -
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Redirect URI: "kakao{NATIVE_APP_KEY}://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="kakao77f34c0e0e72631cebb2c001a7e0257a" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        <!-- <activity -->
        <!-- android:name="com.nhn.android.naverlogin.ui.OAuthLoginActivity" -->
        <!-- android:configChanges="orientation|screenSize" -->
        <!-- android:theme="@style/Theme.AppCompat.Light.Dialog" /> -->
        <activity
            android:name="com.navercorp.nid.oauth.NidOAuthBridgeActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar" />
        <activity
            android:name="com.navercorp.nid.oauth.activity.NidOAuthWebViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="OAuth2.0 by WebView"
            android:screenOrientation="behind" />
        <activity
            android:name="com.navercorp.nid.oauth.activity.NidOAuthCustomTabActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:label="OAuth2.0 by Custom tabs"
            android:launchMode="singleTask"
            android:screenOrientation="behind"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Intent URL 에서 로그인 액티비티를 실행하기 위해 설정 -->
                <data
                    android:host="authorize"
                    android:path="/"
                    android:scheme="naver3rdpartylogin" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kakao.sdk.auth.TalkAuthCodeActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/TransparentCompat" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.totproject.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>