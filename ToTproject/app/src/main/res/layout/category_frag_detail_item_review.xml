<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category_detail_tv_username"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="유저이름" />

        <Button
            android:id="@+id/btn_reply_delete"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/reply_cancel"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <TextView
        android:id="@+id/category_detail_tv_contenttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="5dp"/>


    <LinearLayout
        android:id="@+id/image_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/category_detail_img1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher_foreground" />
        <ImageView
            android:id="@+id/category_detail_img2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher_foreground"/>
        <ImageView
            android:id="@+id/category_detail_img3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher_foreground" />
    </LinearLayout>



</LinearLayout>