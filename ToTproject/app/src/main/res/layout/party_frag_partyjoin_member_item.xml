<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/radius_clean2">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="1dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBackgroundView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text">

                <ImageView
                    android:id="@+id/imgv_member_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/radius_clean"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_user"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <TextView
                android:id="@+id/tv_member_nick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="사용자1"
                android:textAlignment="center"
                android:textColor="@color/black"
                />

            <CheckBox
                android:id="@+id/chk_member_invite"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:visibility="gone"/>



        </LinearLayout>



    </LinearLayout>












</LinearLayout>