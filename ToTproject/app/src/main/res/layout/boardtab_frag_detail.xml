    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/category_detail_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" />
        <TextView
            android:textSize="20dp"
            android:id="@+id/category_detail_tv_board_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="board_title" />
        <TextView
            android:id="@+id/category_detail_tv_board_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:text="board_content \nboard_content \nboard_content \nboard_content \nboard_content" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@drawable/top_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/board_user_detail_tv_reply"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="댓글" />

            <TextView
                android:id="@+id/board_user_detail_tv_replycnt"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/board_user_detail_tv_reply"
                android:gravity="center_vertical"
                android:text="000"/>


        </RelativeLayout>
    </LinearLayout>


    <!-- 만약 안될경우 LinearLayout 로 변경 할 것 -->
    <FrameLayout
