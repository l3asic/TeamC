<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TendencyActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="♣ 성향분석"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/bottom_line"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="(1.매우좋음, 2.좋음, 3.보통, 4.싫음, 5.매우싫음)"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="5dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tend2_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구(2~3인)여행 선호여부"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <RadioGroup
            android:id="@+id/tend2_rg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tend2_rg1_radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg1_radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg1_radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg1_radio4"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="4" />

            <RadioButton
                android:id="@+id/tend2_rg1_radio5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:padding="15dp"/>


        </RadioGroup>

        <TextView
            android:id="@+id/tend2_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="4인이상 여행 선호 여부"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <RadioGroup
            android:id="@+id/tend2_rg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tend2_rg2_radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg2_radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg2_radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tebd2_rg2_radio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tebd2_rg2_radio5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:padding="15dp"/>


        </RadioGroup>

        <TextView
            android:id="@+id/tend2_radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="선호비용 (1-저비용, 5-고비용)"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <RadioGroup
            android:id="@+id/tend_rg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tend2_rg3_radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg3_radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg3_radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg3_radio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg3_radio5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:padding="15dp"/>


        </RadioGroup>

        <TextView
            android:id="@+id/tend2_radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="정적/동적 여행 선호여부(1- 정적, 5-동적)"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <RadioGroup
            android:id="@+id/tend2_rg4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/tend2_rg4_radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg4_radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg4_radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg4_radio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg4_radio5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:padding="15dp"/>


        </RadioGroup>

        <TextView
            android:id="@+id/tend2_radio6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="인/아웃 선호 여부(1-인도어, 5-아웃도어)"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <RadioGroup
            android:id="@+id/tend2_rg6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/tend2_rg6_radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg6_radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg6_radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg6_radio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/tend2_rg6_radio5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:padding="15dp"/>


        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <Button
            android:id="@+id/tend2_btn1_skip"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="건너뛰기"
            android:backgroundTint="#DCCCCC"
            android:textSize="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <Button
            android:id="@+id/tend2_btn2_join"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="회원가입"
            android:backgroundTint="#AB71CEE0"
            android:textSize="20dp"/>


    </LinearLayout>

</LinearLayout>