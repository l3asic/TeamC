<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_main"
            android:layout_width="150dp"
            android:layout_gravity="right|bottom"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="#323B44"
            android:text="성향 분석 다시하기"/>

        <ImageView
            android:id="@+id/tendency_imgv"
            android:layout_width="match_parent"

            android:layout_height="200dp"
            />
    </FrameLayout>
        <TextView
            android:id="@+id/tendencyname_tv"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000"
            android:fontFamily="@font/haenamfont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 성향은요"
            />
        <TextView
            android:id="@+id/tendency_tv"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            />

    </LinearLayout>

    <com.github.mikephil.charting.charts.RadarChart
        android:id="@+id/mapsearchdetail_radar_chart"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
    </LinearLayout>
</ScrollView>