<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".board.xxx_BoardMainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="임시" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="보드액티비티"
            android:textSize="20dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="임시" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/board_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#999999">

        <!-- Floating Action Button 사용하기-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/board_fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:fabSize="mini"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#C98671"
            android:src="@drawable/ic_baseline_search_24"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/board_fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:fabSize="mini"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#DEC063"
            android:src="@drawable/ic_baseline_edit_24"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/board_fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:fabSize="mini"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#65C5D2"
            android:src="@drawable/ic_baseline_format_list_numbered_24"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/board_fab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="15dp"
            android:backgroundTint="#9500ff"
            android:src="@drawable/ic_baseline_add_24" />

    </FrameLayout>


</LinearLayout>